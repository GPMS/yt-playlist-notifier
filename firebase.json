{
  "hosting": {
    "cleanUrls": true,
    "headers": [
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ],
        "source": "sw.js"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ],
        "source": "**/*.@(js|css)"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ],
        "source": "index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "public": "dist",
    "rewrites": [
      {
        "destination": "/index.html",
        "source": "**"
      }
    ]
  }
}
